                               VerticalOptions="Center"/>
                    </Frame>
                    <Frame BackgroundColor="Gray"
                           Margin="0,4">
                        <Label Text="V"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                    <Frame BackgroundColor="Gray"
                           Margin="0,4">
                        <Label Text="S"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                    <Frame BackgroundColor="Gray"
                           Margin="0,4">
                        <Label Text="D"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>
            </Grid>
        </Grid>
        <Grid x:Name="Menucontent"
              HorizontalOptions="End"
              BackgroundColor="White">
            <VerticalStackLayout>
                <HorizontalStackLayout HorizontalOptions="End">
                    <VerticalStackLayout>
                        <Label Text="Miercoles"/>
                        <Label Text="Jun 2023"/>
                    </VerticalStackLayout>
                    <Label Text="28"/>
                </HorizontalStackLayout>
                <Label Text="Tareas"
                       HorizontalOptions="End"
                       Margin="0,8,15,0"
                       FontSize="Title"/>
                <Grid ColumnDefinitions="Auto,*">
                    <Label Text="16:39"
                           Margin="8,0,0,0"
                           VerticalOptions="Center"/>                    
                    <Frame BackgroundColor="AliceBlue"
                           Margin="10"
                           Grid.Column="1"
                           HeightRequest="180">
                        <VerticalStackLayout>
                            <Label Text="Proyecto 360"/>
