                           Margin="4">
                        <Label Text="A"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>
                <VerticalStackLayout VerticalOptions="Center"
                                     Grid.Row="1"
                                     HorizontalOptions="Center">
                    <Frame BackgroundColor="Gray"
                           Margin="0,4">
                        <Label Text="L"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                    <Frame BackgroundColor="Gray"
                           Margin="0,4">
                        <Label Text="M"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                    <Frame BackgroundColor="Gold"
                           Margin="0,4">
                        <Label Text="M"
                               TextColor="Gray"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                    <Frame BackgroundColor="Gray"
                           Margin="0,4">
                        <Label Text="J"
                               TextColor="White"
