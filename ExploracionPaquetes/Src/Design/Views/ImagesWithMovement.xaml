<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="ExploracionPaquetes.Src.Design.Views.ImagesWithMovement"
             Title="ImagesWithMovement">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Paquete Lottie"/>
            <skia:SKLottieView Source="action-completed.json"
                               RepeatCount="-1"
                               HeightRequest="200"
                               WidthRequest="200"
                               HorizontalOptions="Center" />
            <Label Text="Gif"/>
            <Image Source="duck.gif"
                   IsVisible="true"
                   IsAnimationPlaying="True"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
