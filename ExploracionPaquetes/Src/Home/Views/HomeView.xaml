<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExploracionPaquetes.Src.Home.Views.HomeView"
             Title="HomeView">
    <VerticalStackLayout>
        <Frame>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoToSecurityViewsCommand}"/>
            </Frame.GestureRecognizers>
            <Label Text="Seguridad"/>
        </Frame>
        <Frame>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoToDesignViewsCommand}"/>
            </Frame.GestureRecognizers>
            <Label Text="Diseño"/>
        </Frame>
        <Frame>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoToSignInViewCommand}"/>
            </Frame.GestureRecognizers>
            <Label Text="Autenticacion."/>
        </Frame>
         <Frame>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GotoMenuListTodoCommand}"/>
            </Frame.GestureRecognizers>
            <Label Text="Lista de cosas."/>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
