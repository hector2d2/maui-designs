<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExploracionPaquetes.Src.Security.Views.AlertView"
             Title="AlertView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <DatePicker x:Name="DP"/>
        <TimePicker x:Name="TP"/>
        <Button Text="mostrar diferencia fechas"
                x:Name="BtnDateDifferences"
                Clicked="BtnDateDifferences_Clicked"/>
        <Button Text="Poner alarma"
                x:Name="BtnSetAlarm"
                Clicked="BtnSetAlarm_Clicked">
        </Button>
         <Button Text="Poner Local Notificacion"
                x:Name="BtnSetNotification"
                Clicked="BtnSetNotification_Clicked">
        </Button>
    </VerticalStackLayout>
</ContentPage>
